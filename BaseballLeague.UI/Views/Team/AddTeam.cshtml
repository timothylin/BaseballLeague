@model BaseballLeague.UI.Models.TeamVM

@{
    ViewBag.Title = "AddTeam";
}

<h2>AddTeam</h2>


@using (Html.BeginForm("AddTeam","Team", FormMethod.Post  )) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TeamVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <p>@Html.LabelFor(m => m.Team.TeamName)</p>
                <p>@Html.TextBoxFor(m => m.Team.TeamName, new {style = "width:100%", placeholder = "Bulls"})</p>
            </div>
            <div class="col-md-6">
                <p>@Html.LabelFor(m => m.Team.Manager)</p>
                <p>@Html.TextBoxFor(m => m.Team.Manager, new {style = "width:100%", placeholder = "Manager"})</p>
            </div>
            <div class="col-md-6">
                <p>@Html.LabelFor(m => m.Team.League.LeagueName)</p>
                <p>@Html.TextBoxFor(m => m.Team.League.LeagueName, new {style = "width:100%", placeholder = "League"})</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
