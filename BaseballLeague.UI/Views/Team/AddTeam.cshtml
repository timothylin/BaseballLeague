@using System.Web.UI.WebControls
@model BaseballLeague.UI.Models.TeamVM

@{
    ViewBag.Title = "AddTeam";
}

<h2>ÌADD'TEAMÍ</h2>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm("AddTeam", "Team", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @*<p>@Html.LabelFor(m => m.Team.TeamName)</p>*@
                            <h6>Team Name</h6>
                            <p>@Html.TextBoxFor(m => m.Team.TeamName, new {style = "width:", placeholder = "Bulls"})</p>
                        </div>
                        <div class="col-md-6 form-group">
                            @*<p>@Html.LabelFor(m => m.Team.Manager)</p>*@
                            <h6>Team Manager</h6>
                            <p>@Html.TextBoxFor(m => m.Team.Manager, new {style = "width:", placeholder = "Manager"})</p>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @*<p>@Html.LabelFor(m => m.Team.League.LeagueName)</p>*@
                            <h6>League Name</h6>
                            @*<p>@Html.TextBoxFor(m => m.Team.League.LeagueName, new { style = "width:100%", placeholder = "League" })</p>*@
                            <p>@Html.DropDownListFor(m => m.Team.League.LeagueID, Model.LeagueList, "Choose a League", new {@class = "form-control"})</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary"/>
                            <button class="btn btn-warning">
                                @Html.ActionLink("Back To List", "Index", "Team", null, new {style = "color: white; text-decoration: none;"})
                            </button>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
