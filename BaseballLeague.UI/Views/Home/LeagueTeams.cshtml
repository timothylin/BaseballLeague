@model BaseballLeague.Models.League

@{
    ViewBag.Title = "LeagueTeams";
}

<h2>ÌLEAGUE'TEAMSÍ</h2>
<div class="row">
    <div class="col-md-offset-5 col-md-2">
        <div class="col-center-block">
            @foreach (var team in Model.Teams)
            {

                using (Html.BeginForm("Index", "Player", null, FormMethod.Post))
                {
                    @Html.Hidden("TeamID", team.TeamID)
                    <button id="details" class="btn btn-primary btn-block margin-top-20">@team.TeamName</button>
                }

            }
        </div>
    </div>
</div>